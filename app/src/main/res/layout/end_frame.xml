<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_half"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/score_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:text="Score"
            android:textColor="@color/button_back"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/end_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/score_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text=""
            android:textColor="@color/button_back"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/end_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/score_title"
            android:layout_alignRight="@+id/score_title"
            android:layout_below="@+id/end_score"
            android:layout_marginTop="96dp"
            android:background="@drawable/button_select"
            android:text="重新开始"
            android:textColor="@color/white" />
    </RelativeLayout>

</FrameLayout>